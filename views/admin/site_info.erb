<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Basic Site Info</h1>
  </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading"></div><!-- /.panel-heading -->
      <div class="panel-body">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#site-info" data-toggle="tab">Site Info</a>
          </li>
          <li class><a href="#site-photos" data-toggle="tab">Site Photos</a>
          </li>
        </ul>
        <div class="tab-content">

          <div class="tab-pane fade in active" id="site-info">
            <% form_for @site, '/admin/site_info/1', method: :put do |f| %>
            <%= f.error_messages %>
            <table id="site-info-table" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Section</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                <td><%= f.label :header_description, caption: "HEADER" %></td>
                <td><%= f.text_field :header_description %></td>
                </tr>
                <tr>
                <td><%= f.label :services_byline, caption: "SERVICES BYLINE" %></td>
                <td><%= f.text_field :services_byline %></td>
                </tr>
                <tr>
                <td><%= f.label :event_description, caption: "EVENTS DESCRIPTION" %></td>
                <td><%= f.text_area :event_description %></td>
                </tr>
                <tr>
                <td><%= f.label :home_description, caption: "HOME DESCRIPTION" %></td>
                <td><%= f.text_area :home_description %></td>
                </tr>
                <tr>
                <td><%= f.label :office_description, caption: "OFFICE DESCRIPTION" %></td>
                <td><%= f.text_area :office_description %></td>
                </tr>
                <tr>
                <td><%= f.label :about_name, caption: "ABOUT NAME" %></td>
                <td><%= f.text_field :about_name %></td>
                </tr>
                <tr>
                <td><%= f.label :about_byline, caption: "ABOUT BYLINE" %></td>
                <td><%= f.text_field :about_byline %></td>
                </tr>
                <tr>
                <td><%= f.label :about_description, caption: "ABOUT DESCRIPTION" %></td>
                <td><%= f.text_area :about_description %></td>
                </tr>
                <tr>
                <td><%= f.label :contact_byline, caption: "CONTACT BYLINE" %></td>
                <td><%= f.text_field :contact_byline %></td>
                </tr>
              </tbody>
            </table>





              <%= f.submit %>

            <% end %>
          </div><!-- /#site-info -->

          <div class="tab-pane fade" id="site-photos">
            <% form_for @site, '/admin/site_info/1', method: :put do |f| %>
            <br>
            <br>
            <%= f.error_messages %>

            <%= f.label :header_img %>
            <%= f.text_field :header_img %>
            <br>
            <br>
            <%= f.label :about_img %>
            <%= f.text_field :about_img %>
            <br>
            <br>
            <%= f.label :contact_img %>
            <%= f.text_field :contact_img %>
            <br>
            <br>
            <%= f.label :menu_bg_img %>
            <%= f.text_field :menu_bg_img %>
            <br>
            <br>
            <%= f.submit %>

            <% end %>
          </div><!-- /#site-photos -->

        </div><!-- /.tab-content -->
      </div><!-- /.panel-body -->
    </div><!-- /.panel -->
  </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
