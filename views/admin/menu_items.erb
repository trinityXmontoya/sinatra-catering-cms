<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Menu Items</h1>
  </div><!-- /.col-lg-12 -->
</div><!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading"></div><!-- /.panel-heading -->
      <div class="panel-body">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#list" data-toggle="tab">List</a>
          </li>
          <li class><a href="#add-new" data-toggle="tab">Add new</a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane fade in active" id="list">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                  <tr>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Photo</th>
                  </tr>
                </thead>
                <tbody>
                <% @menu_items.each do |m_i| %>
                  <tr class="odd gradeX">
                    <td>
                    <%= m_i.category.name %>
                    </td>
                    <td><%= m_i.title %></td>
                    <td><%= m_i.description %></td>
                    <td class="center">
                      <p>Edit</p>
                      |
                      <%= button_to 'Delete', url("/admin/menu_item/#{m_i.id}"), :method => :delete %>
                    </td>
                    <%#= partial :'admin/edit', locals: {:model => cat} %>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div><!-- /.table-responsive -->
          </div><!-- /#list -->
          <div class="tab-pane fade" id="add-new">
              <% form_for @menu_item, '/admin/menu_items' do |f| %>
                <%= f.error_messages %>

                <%= f.label :category_id %>
                <%= f.select :category_id, collection: Category.all, fields: [:name, :id]%>

                <%= f.label :title %>
                <%= f.text_field :title %>

                <%= f.label :description %>
                <%= f.text_field :description %>

                <%= f.submit "Add"%>
              <% end %>
          </div><!-- /#add-new -->
        </div><!-- /.tab-content -->
      </div><!-- /.panel-body -->
    </div><!-- /.panel -->
  </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
